{% block title %}Pizza{% endblock %}

{% block body %}
    <h1>Pizza</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pizza.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pizza.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ pizza.content }}</td>
